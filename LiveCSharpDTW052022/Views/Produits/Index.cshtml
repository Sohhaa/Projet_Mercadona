@model ListProduitsViewModel;

@{
    ViewData["Title"] = "Catalogue";

}

@{
    bool promo = false;
    string card_promo = "";
    if (promo) card_promo = "card-promo";
    int i = 0;
}
<h1>Catalogue des produits Mercadona</h1>

<div class="mt-3 row">
    @foreach (var produit in Model.LstProduits)
    {
        if (i == 5 || i == 10 || i == 15 || i == 20) { promo = true; card_promo = "card-promo"; } else { promo = false; card_promo = ""; };
        i++;
        if (promo) card_promo = "card-promo";

        <div class="col-12 col-sm-6 col-md-4 col-lg-3 pt-2 pb-2">
            <div class="card h-100 d-flex flex-column justify-content-center custom-card-height @card_promo ">
                <img class="card-img-top h-50 custom-img-height" src="@produit.Image" alt="@produit.Libelle">
                <div class="card-body pb-1 pt-1 pl-1 pr-1 d-flex flex-column justify-content-center">
                    <h6 class="card-title text-center " style="color:#91702e">@produit.Libelle</h6>
                    <div class="barre"></div>
                    <p class="card-text text-center">@produit.Description</p>

                    

                    @if (promo){
                    <h5 class="card-title text-right pr-3" style="justify-content: right;color : #c89B3f;"><span style="text-decoration:line-through;font-size:13px;">@produit.Prix €</span><span>&nbsp;&nbsp;&nbsp;&nbsp;</span><span class="badge badge-danger" style="background-color : #ffe5e5; color:red;font-weight:bold">@produit.Prix €</span></h5>
                    <div class="promo">-25% !</div>
                    <h7 class="text-right " style="font-size:11px; font-style:italic;">Promotion du 15/08/2023 au 16/11/2023</h7>
                    }else{
                        <h5 class="card-title text-right pr-3" style="justify-content: right;color : #c89B3f;">@produit.Prix €</h5>
                    }
                    <p class="" style="margin:0"><span class="badge badge-light text-center" style="background-color:#fcf2de;">@produit.IdCategorie</span></p>
                </div>
            </div>
        </div>
    }
</div>



