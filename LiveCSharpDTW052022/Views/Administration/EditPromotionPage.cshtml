@model EditPromotionViewModel

@{

}

<h2>Modifier la promotion : @Model.Promotion.Libelle</h2>

@*<div style="color:red" class="validation-summary-errors">
    @Html.ValidationSummary()
</div>*@

<div class="row">
    <div class="col-md-5">
        <form asp-controller="Administration" asp-action="EditPromotionAction">
            <input type="hidden" asp-for="Promotion.IdPromotion" />
            <div class="form-group">
                <label asp-for="Promotion.Libelle">Nom de la promotion</label>
                <input class="form-control" asp-for="Promotion.Libelle">
            </div>
            <div class="form-group">
                <label asp-for="Promotion.Reduction">Pourcentage de réduction</label>
                <input class="form-control" asp-for="Promotion.Reduction">
            </div>
            <div class="form-group">
                <label asp-for="Promotion.DateDebut">Date de début de la promotion</label>
                <input class="form-control datepicker" asp-for="Promotion.DateDebut">
            </div>
            <div class="form-group">
                <label asp-for="Promotion.DateFin">Date de fin de la promotion</label>
                <input class="form-control datepicker" asp-for="Promotion.DateFin">
            </div>
          
            <button type="submit" class="btn btn-primary">Modifier la promotion</button>
        </form>
    </div>
</div>
<br />
<form asp-controller="Administration" asp-action="DeletePromotionAction">
    <input type="hidden" asp-for="Promotion.IdPromotion" id="idSuppression" />
    <button type="submit" class="btn btn-danger">Supprimer la promotion</button>
</form>

<div>
    <a asp-action="ListPromotionsPage">Retourner à la liste des promotions</a>
</div>

