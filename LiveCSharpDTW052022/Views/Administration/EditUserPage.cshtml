@model EditUserViewModel

@{

}

<h2>Modifier les informations de l'utilisateur : @Model.User.FirstName @Model.User.LastName</h2>

@*<div style="color:red" class="validation-summary-errors">
    @Html.ValidationSummary()
</div>*@

<div class="row">
    <div class="col-md-5">
        <form asp-controller="Administration" asp-action="EditUserAction">
            <input type="hidden" asp-for="User.IdUser" />
            <div class="form-group">
                <label asp-for="User.FirstName">Prénom</label>
                <input class="form-control" asp-for="User.FirstName">
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName">Nom</label>
                <input class="form-control" asp-for="User.LastName">
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email">E-mail</label>
                <input class="form-control" asp-for="User.Email">
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password">Mot de passe</label>
                <input class="form-control" asp-for="User.Password">
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
        

            <button type="submit" class="btn btn-primary">Modifier l'utilisateur</button>
        </form>
    </div>
</div>
<br />
<form asp-controller="Administration" asp-action="DeleteUserAction">
    <input type="hidden" asp-for="User.IdUser" id="idSuppression" />
    <button type="submit" class="btn btn-danger">Supprimer l'utilisateur</button>
</form>

<div>
    <a asp-action="ListUsersPage">Retourner à la liste des utilisateurs</a>
</div>

