@model CreateCategorieViewModel

@{

}

<h1>Créer une nouvelle catégorie</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-controller="Administration" asp-action="CreateCategorieAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewCategorie.Libelle">Nom de la catégorie</label>
                <input class="form-control" asp-for="NewCategorie.Libelle">
                <span asp-validation-for="NewCategorie.Libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer une catégorie</button>
            </div>
        </form>
     </div>
</div>

<div>
    <a asp-action="ListCategoriesViewModel">Retourner à la liste des catégories</a>
</div>
