@model CreateCategorieViewModel

@{

}

<h1>Créer une nouvelle catégorie</h1>


<div style="color:red" class="validation-summary-errors">
    @Html.ValidationSummary()
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Administration" asp-action="CreateCategorieAction">
            <div class="form-group">
                <label asp-for="libelleCategorie">Nom de la catégorie</label>
                <input class="form-control" asp-for="libelleCategorie">
                <span asp-validation-for="libelleCategorie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer une catégorie</button>
            </div>
        </form>
     </div>
</div>

<div>
    <a asp-action="ListCategoriesViewModel">Retourner à la liste des catégories</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

