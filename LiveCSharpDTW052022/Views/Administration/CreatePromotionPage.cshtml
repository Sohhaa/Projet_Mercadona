@model CreatePromotionViewModel

@{

}

<h1>Créer une nouvelle promotion</h1>


<div style="color:red" class="validation-summary-errors">
    @Html.ValidationSummary()
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Administration" asp-action="CreatePromotionAction">
            <div class="form-group">
                <label asp-for="libellePromotion">Nom de la promotion</label>
                <input class="form-control" asp-for="libellePromotion">
                <span asp-validation-for="libellePromotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="reduction">Pourcentage de Réduction</label>
                <input class="form-control" asp-for="reduction">
                <span asp-validation-for="reduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateDebut">Date de début de la promotion</label>
                <input class="form-control datepicker" asp-for="dateDebut">
                <span asp-validation-for="dateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateFin">Date de fin de la promotion</label>
                <input class="form-control datepicker" asp-for="dateFin">
                <span asp-validation-for="dateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Créer une catégorie</button>
            </div>
        </form>
     </div>
</div>

<div>
    <a asp-action="ListPromotionsPage">Retourner à la liste des promotions</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

