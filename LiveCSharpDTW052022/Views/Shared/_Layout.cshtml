<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mercadona</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/Content/fonts.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/catalogue.css" />
    <link rel="stylesheet" href="~/css/administration.css" />
    <link href="~/css/font.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik+Distressed&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet" />

    @RenderSection("LesFichiersCss", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:#00ab61 !important" ;><img class="logoMercadona" src="~/images/logo_mercadona.jpg" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" style="color:#00ab61 !important;">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Catalogue" asp-action="Index" style="color:#00ab61 !important" ;>Catalogue</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ContactMessage" asp-action="Index" style="color:#00ab61 !important" ;>Contact</a>
                        </li>
                        @await Component.InvokeAsync("NavBar")
                    </ul>
                </div>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="nav-item" style="text-align:right">
                    <span class="nav-link">Bienvenue, @User.Identity.Name <a asp-area="" asp-controller="Login" asp-action="Logout" style="font-size:11px" ;>Se déconnecter</a></span>
          
                    
                </div>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Mercadona | <href url="https://www.studi.com/fr">Studi</href> - Maxime GOURDON -  <a asp-area="" asp-controller="ContactMessage" asp-action="Index">Nous contacter</a> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Mentions légales</a>
        </div>
    </footer>
     
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" id="toastmessage"
            style="">
      <div class="toast-header">
        <strong class="mr-auto">Message</strong>
        <small class="text-muted">now</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body">
        @TempData["MessageValidation"]
      </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    @if (!string.IsNullOrWhiteSpace(TempData["MessageValidation"]?.ToString()))
    {
        <script>
            $( document ).ready(function() {
                $("#toastmessage").toast({
                    delay: 10000,
                });
                $('#toastmessage').toast('show')
            });
        </script>
    }
    @RenderSection("Scripts", required: false)

</body>
</html>